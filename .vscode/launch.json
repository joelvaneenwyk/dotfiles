    "version": "0.2.0",
    "configurations": [
        {
            "type": "bashdb",
            "request": "launch",
            "name": "bash setup.sh",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/setup.sh",
            "args": []
        },
        {
            "type": "bashdb",
            "request": "launch",
            "name": "bash <select>",
            "cwd": "${workspaceFolder}",
            "program": "${command:AskForScriptName}",
