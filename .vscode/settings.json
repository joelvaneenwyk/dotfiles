{
    "shellcheck.enable": true,
    "shellcheck.run": "onType",
    "shellcheck.enableQuickFix": true,
    "shellcheck.customArgs": [
        "-W0",
        "--external-sources",
        "--root=${workspaceFolder}",
        "--source-path=${workspaceFolder}",
        "--source-path=${workspaceFolder}/source/stow"
    ],
    "shellcheck.ignorePatterns": {
        ".gitignore": true,
        "**/.gitignore": true,
        "**/.mailcap": true,
        "**/git-fuzy": true,
        "**/test_canonicalize_path": true,
        "**/test_readlink_emulation": true,
        "**/default.mustache": true,
        "packages/fish/.config/**/*.sh": true,
        "packages/fish/.config/base16-shell/**/*": true,
        "packages/fish/.config/base16-fzf/**/*": true,
        "packages/fish/.config/git-fuzzy/**/*": true,
        "test/bats/**/*.bats": true,
        "test/test_helper/**/*": true
    },
    "[shellscript]": {
        "editor.formatOnSave": true,
        "files.eol": "\n"
    },

    "markdownlint.ignore": ".markdownlintignore",

    "Lua.workspace.ignoreDir": [
        ".vscode",
        "micro/.config/micro",
        "source/windows/clink"
    ],
    "Lua.workspace.library": [
        "source/windows/clink-completions",
        "source/windows/clink",
        "macos/.hammerspoon",
        "micro/.config"
    ],

    "xml.validation.enabled": false,
    "stylelint.enable": false,

    "vscode-lua-format.configPath": "source/config/.lua-style",
    "git.requireGitUserConfig": false,

    "editor.fontFamily": "PragmataProMonoLiga NF, PragmataPro Mono Liga, JetBrains Mono, Hack, Menlo, Monaco, Consolas, Courier New, monospace",
    "editor.fontLigatures": true,

    "json.validate.enable": true,

    "terminal.integrated.fontFamily": "PragmataProMonoLiga NF, PragmataPro Mono Liga, JetBrains Mono, Hack, Menlo, Monaco, Consolas, Courier New, monospace",
    "terminal.integrated.environmentChangesRelaunch": false,
    "terminal.integrated.confirmOnExit": "never",
    "terminal.integrated.showExitAlert": false,
    "terminal.integrated.cwd": "${workspaceFolder}",
    "terminal.integrated.defaultProfile.windows": "Command Prompt",
    "terminal.integrated.profiles.windows": {
        "PowerShell": {
            "source": "PowerShell",
            "args": ["-nologo"],
            "icon": "terminal-powershell"
        },
        "Command Prompt": {
            "path": [
                "${env:windir}\\Sysnative\\cmd.exe",
                "${env:windir}\\System32\\cmd.exe"
            ],
            "args": [],
            "icon": "terminal-cmd"
        },
        "MSYS2": {
            "path": [
                "${env:USERPROFILE}\\scoop\\apps\\msys2\\current\\usr\\bin\\bash.exe"
            ],
            "args": [
                "--login", "-i"
            ],
            "env": {
                "MSYSTEM": "MINGW64",
                "CHERE_INVOKING": "1",
                "MSYS2_PATH_TYPE": "inherit"
            },
            "icon": "terminal-bash"
        },
        "Fish": {
            "path": [
                "${env:USERPROFILE}\\scoop\\apps\\msys2\\current\\usr\\bin\\fish.exe"
            ],
            "args": [
                "--login", "-i"
            ],
            "env": {
                "MSYSTEM": "MSYS2",
                "CHERE_INVOKING": "1",
                "MSYS2_PATH_TYPE": "inherit"
            },
            "icon": "terminal"
        },
        "Git Bash": {
            "source": "Git Bash",
            "icon": "terminal-bash"
        }
    },

    "terminal.integrated.defaultProfile.osx": "bash",
    "terminal.integrated.profiles.osx": {
        "sh": {
            "path": "sh",
            "args": []
        },
        "bash": {
            "path": "bash",
            "args": [
                "-l"
            ],
            "icon": "terminal-bash"
        },
        "zsh": {
            "path": "zsh",
            "args": [
                "-l"
            ]
        },
        "fish": {
            "path": "fish",
            "args": [
                "-l"
            ]
        },
        "tmux": {
            "path": "tmux",
            "icon": "terminal-tmux"
        },
        "pwsh": {
            "path": "pwsh",
            "icon": "terminal-powershell"
        }
    },
    "terminal.integrated.scrollback": 20000,
    "terminal.integrated.defaultProfile.linux": "bash",
    "terminal.integrated.profiles.linux": {
        "sh": {
            "path": "sh",
            "args": [
                "-l"
            ]
        },
        "bash": {
            "path": "sh",
            "args": [
                "-c",
                "set -x && . ~/.profile && bash"
            ],
            "icon": "terminal-bash"
        },
        "zsh": {
            "path": "zsh"
        },
        "fish": {
            "path": "fish"
        },
        "tmux": {
            "path": "tmux",
            "icon": "terminal-tmux"
        },
        "pwsh": {
            "path": "pwsh",
            "icon": "terminal-powershell"
        }
    },

    "perl.enable": true,
    "perl.perlCmd": "${env:USERPROFILE}/.local/perl/perl/bin/perl.exe",
    "perl.perlInc": [
        "${env:USERPROFILE}/.local/perl/lib",
        "${workspaceFolder}/lib",
        "${workspaceFolder}/bin",
        "${workspaceFolder}/t"
    ],

    "beautify.language": {
        "js": {
            "type": ["javascript", "json", "json"],
            "filename": [".jshintrc", ".jsbeautifyrc"],
            "ext": ["js", "json", "jsonc"]
        },
        "css": ["css", "scss"],
        "html": ["htm", "html"]
    },

    "taskExplorer.autoRefresh": true,
    "taskExplorer.showFavoritesButton": true,
    "taskExplorer.enableNsis": false,
    "taskExplorer.enableGradle": false,
    "taskExplorer.showLastTasks": false,
    "taskExplorer.enableAnsiconForAnt": false,
    "taskExplorer.enableAnt": false,
    "taskExplorer.enableAppPublisher": false,
    "taskExplorer.enableBash": true,
    "taskExplorer.enableBatch": true,
    "taskExplorer.enableGrunt": false,
    "taskExplorer.enableGulp": false,
    "taskExplorer.enablePerl": true,
    "taskExplorer.enableRuby": false,
    "taskExplorer.enableMaven": false,
    "taskExplorer.enableMake": false,
    "taskExplorer.exclude": [
        "**/_Inline/**",
        "**/.mypy_cache/**",
        "**/.pytest_cache/**",
        "**/node_modules/**",
        "artifacts/**",
        "**/.config/**",
        "**/.tmp/**",
        "**/.vagrant/**"
    ],

    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "source/stow/lib/**/*.pm": true,
        "source/stow/tmp-testing-trees": true,
        "source/stow/autom4te.cache": true,
        "source/stow/tools/texinfo/**": true,
        "**/_build/**": true,
        "**/blib/**": true
    },
    "files.associations": {
        "*.json.git": "jsonc",
        "*.omp.json": "jsonc",
        "*.in": "perl",
        "*.shbat": "shellscript",
        "*.bats": "shellscript",
        "*.post": "shellscript",
        "setup": "shellscript",
        "stow": "perl",
        "chkstow": "perl",
        "get-version": "perl",
        "cpanfile": "perl",
        "flake8": "ini",
        "*.conf": "properties",
        ".wslconfig": "properties",
        "*.template": "properties",
        ".gitconfig_*": "properties",
        ".gitignore": "properties",
        ".gitmodules": "properties",
        ".editorconfig": "editorconfig"
    },

    "[json]": {
        "editor.defaultFormatter": "HookyQR.beautify",
        "editor.formatOnSave": true,
    },
    "[jsonc]": {
        "editor.defaultFormatter": "HookyQR.beautify",
        "editor.formatOnSave": true,
    },
    "json.format.enable": true,

    "[powershell]": {
        "debug.saveBeforeStart": "nonUntitledEditorsInActiveGroup",
        "editor.semanticHighlighting.enabled": false,
        "editor.formatOnSave": true,
        "editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.<>/?"
    },
    "powershell.integratedConsole.showOnStartup": false,
    "powershell.integratedConsole.suppressStartupBanner": true,
    "powershell.scriptAnalysis.enable": true,
    "powershell.scriptAnalysis.settingsPath": "source/config/PSScriptAnalyzerSettings.psd1",
    "powershell.codeFormatting.whitespaceBeforeOpenBrace": true,
    "powershell.codeFormatting.whitespaceBeforeOpenParen": true,
    "powershell.codeFormatting.whitespaceAroundOperator": true,
    "powershell.codeFormatting.whitespaceAfterSeparator": true,
    "powershell.codeFormatting.whitespaceInsideBrace": true,
    "powershell.codeFormatting.whitespaceBetweenParameters": true,
    "powershell.codeFormatting.addWhitespaceAroundPipe": true,
    "powershell.codeFormatting.trimWhitespaceAroundPipe": false,
    "powershell.codeFormatting.ignoreOneLineBlock": false,
    "powershell.codeFormatting.alignPropertyValuePairs": true,
    "powershell.codeFormatting.useCorrectCasing": true,

    "cSpell.ignorePaths": [
        "**/package-lock.json",
        "**/node_modules/**",
        "**/vscode-extension/**",
        "**/.git/objects/**",
        ".vscode/**",
        ".vscode-insiders/**",
        "source/stow/**/*",
        "source/windows/clink-completions/**",
        "packages/fish/.base16_theme",
        "packages/fish/.config/base16-shell/**",
        "packages/fish/.config/base16-fzf/**",
        "packages/fish/.config/git-fuzzy/**",
        "packages/fish/.config/fish/fish_variables",
        "packages/vim/.vim/bundle/vundle/**",
        "packages/micro/.config/micro/**",
        "packages/macos/Library/**",
        "test/bats/**",
        "test/test_helper/**",
        ".Xresources",
        ".xmobarrc",
        ".travis.yml"
    ],
    "cSpell.words": [
        "agnoster",
        "asdf",
        "Backblaze",
        "beaners",
        "buildx",
        "cpan",
        "cpanm",
        "cygpath",
        "distro",
        "dockerhub",
        "dotfile",
        "dotfiles",
        "eval",
        "filelocator",
        "Fullscreen",
        "fundle",
        "gmail",
        "joelvaneenwyk",
        "keyscan",
        "kleopatra",
        "Mailmate",
        "mingw",
        "mkdir",
        "MobaXterm",
        "msys",
        "msystem",
        "mycelio",
        "mycoshiro",
        "noconfirm",
        "pacman",
        "powerline",
        "pwsh",
        "pyright",
        "qemu",
        "restow",
        "rlespinasse",
        "rogalmic",
        "runneradmin",
        "semver",
        "submodules",
        "symlink",
        "symlinking",
        "symlinks",
        "synoservicectl",
        "tldr",
        "trackpad",
        "USERPROFILE",
        "Venv",
        "xclip",
        "xmonad",
        "yabai"
    ],
    //
    // Ignore/disable features or extensions
    //
    "restructuredtext.languageServer.disabled": true,
    "restructuredtext.syntaxHighlighting.disabled": true,
    "svn.ignoreMissingSvnWarning": true,
    "esbonio.server.enabled": false,
    "search.useIgnoreFiles": false,
    "python.analysis.typeCheckingMode": "basic"
}
