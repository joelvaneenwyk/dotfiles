# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
insert_final_newline = true

[*.{json,cjson}]
indent_style = space
indent_size = 4

[*.{md,markdown}]
indent_style = space
indent_size = 2

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.{bat,cmd,ps1,psd1}]
end_of_line = crlf
encoding = utf-8
indent_style = space
indent_size = 4

[*.{sh,bash,bats,conf,fish,profile}]
end_of_line = lf
indent_style = space
indent_size = 4
binary_next_line = true
switch_case_indent = true
space_redirects = true
keep_padding = true
function_next_line = true
