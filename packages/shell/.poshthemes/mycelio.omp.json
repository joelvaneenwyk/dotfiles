{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "version": 2,
    "blocks": [
        {
            "type": "prompt",
            "alignment": "left",
            "segments": [
                {
                    "type": "text",
                    "style": "plain",
                    "foreground": "#a3a3a3",
                    "template": "\u250c"
                },
                {
                    "type": "text",
                    "style": "powerline",
                    "foreground": "#a3a3a3",
                    "template": " MY\u2208 "
                },
                {
                    "type": "os",
                    "style": "plain",
                    "foreground": "#e4e4e4",
                    "background": "#0077c2",
                    "template": " {{.Icon}}  ",
                    "properties": {
                        "display_distro_name": true,
                        "macos": "mac"
                    }
                },
                {
                    "type": "shell",
                    "style": "powerline",
                    "powerline_symbol": "\ue0b0",
                    "invert_powerline": true,
                    "foreground": "#e4e4e4",
                    "background": "#0077c2",
                    "template": " {{ .Name }} ",
                    "properties": {
                        "mapped_shell_names": {
                            "pwsh": "PS"
                        }
                    }
                },
                {
                    "type": "session",
                    "style": "plain",
                    "foreground": "#757575",
                    "template": " {{ if .SSHSession }}[SSH] {{ end }}{{ .UserName }}@{{ .HostName }} ",
                    "properties": {
                        "display_host": true
                    }
                },
                {
                    "type": "path",
                    "style": "powerline",
                    "powerline_symbol": "\ue0b0",
                    "foreground": "#474747",
                    "background": "#61AFEF",
                    "template": " {{ .Path }} ",
                    "properties": {
                        "mixed_threshold": 1,
                        "style": "letter"
                    }
                },
                {
                    "type": "exit",
                    "style": "powerline",
                    "foreground": "#252525",
                    "background": "#FFFFFF",
                    "trailing_diamond": "\ue0b4",
                    "template": "{{ if ne .Code 0 }}<,#FF461B> \uf656 {{ .Meaning }} </>{{else}}<,#8AEB07> \uf42e  </>{{ end }}",
                    "properties": {
                        "always_enabled": true
                    }
                }
            ],
            "newline": true
        },
        {
            "type": "prompt",
            "alignment": "right",
            "segments": [
                {
                    "type": "root",
                    "style": "plain",
                    "foreground": "#ff8080",
                    "template": " <#757575,>as</> \uf0e7",
                    "properties": {
                        "root_icon": "root"
                    }
                },
                {
                    "type": "time",
                    "style": "plain",
                    "foreground": "#689f38",
                    "template": " <#757575,>|</> {{ .CurrentDate | date .Format }}",
                    "properties": {
                        "time_format": "15:04:05"
                    }
                }
            ]
        },
        {
            "type": "prompt",
            "alignment": "left",
            "segments": [
                {
                    "type": "text",
                    "style": "plain",
                    "foreground": "#a3a3a3",
                    "template": "\u2514"
                },
                {
                    "type": "text",
                    "style": "plain",
                    "foreground": "#ffffff",
                    "template": "$ "
                }
            ],
            "newline": true
        }
    ]
}
