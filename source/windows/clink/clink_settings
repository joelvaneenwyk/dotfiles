#
# Clink settings for `dotfiles` profile
#

# name: Auto-update the Clink program files
# type: enum
# options: off,check,prompt,auto
clink.autoupdate = off

# name: Strips CR and LF chars on paste
# type: enum
# options: delete,space,ampersand,crlf
clink.paste_crlf = space

# name: Auto-answer terminate prompt
# type: enum
# options: off,answer_yes,answer_no
cmd.auto_answer = answer_yes

# name: Argument color
# type: color
color.arg = bold yellow

# name: Argument info color
# type: color
color.arginfo = yellow

# name: Color for home dir tilde
# type: color
color.autoexpandtilde = bright cyan

# name: Shell command completions
# type: color
color.cmd = bold yellow

# name: Color for < and > redirection symbols
# type: color
color.cmdredir = bold

# name: Color for & and | command separators
# type: color
color.cmdsep = bold

# name: Color for comment row
# type: color
color.comment_row = bright white on cyan

# name: Description completion color
# type: color
color.description = bright cyan

# name: Color for command divider line
# type: color
color.divider_line = sgr 30;48;5;25

# name: Color for command end divider line
# type: color
color.divider_line_end = sgr 38;5;25

# name: Doskey completions
# type: color
color.doskey = bold cyan

# name: Color for escape for plain tilde
# type: color
color.escapetilde = bright cyan on blue

# name: Filtered completion color
# type: color
color.filtered = bold yellow

# name: Flag color
# type: color
color.flag = bold

# name: Color for preferred branch completions
# type: color
color.git.star = bright green

# name: For user-interaction prompts
# type: color
color.interact = bold

# name: Color for 'rem lua:' prefix
# type: color
color.luaprefix = bright cyan on blue

# name: Message area color
# type: color
color.message = default

# name: Prompt color
# type: color
color.prompt = red

# name: Color for suggestion text
# type: color
color.suggestion = bright black

# name: Unexpected argument color
# type: color
color.unexpected = default

# name: Color for yarn run local module
# type: color
color.yarn.module = bright green

# name: Color for yarn run project.json script
# type: color
color.yarn.script = bright blue

# name: Match executables in current directory
# type: boolean
exec.cwd = True

# name: Include directories
# type: boolean
exec.dirs = True

# name: Enable executable completions
# type: boolean
exec.enable = True

# name: Match executables in PATH
# type: boolean
exec.path = True

# name: Whitespace prefix matches files
# type: boolean
exec.space_prefix = True

# name: Use default key bindings
# type: boolean
fzf.default_bindings = False

# name: Sets how command history expansion is applied
# type: enum
# options: off,on,not_squoted,not_dquoted,not_quoted
history.expand_mode = not_dquoted

# name: Skip adding lines prefixed with whitespace
# type: boolean
history.ignore_space = False

# name: The number of history lines to save
# type: integer
history.max_lines = 10000

# name: Save history between sessions
# type: boolean
history.save = True

# name: Share history between instances
# type: boolean
history.shared = True

# name: Clink mouse input
# type: enum
# options: off,on,auto
terminal.mouse_input = on

# name: Support Windows' Ctrl-Alt substitute for AltGr
# type: boolean
terminal.use_altgr_substitute = True

# name: Show a tip when Clink starts
# type: boolean
tips.enable = False

